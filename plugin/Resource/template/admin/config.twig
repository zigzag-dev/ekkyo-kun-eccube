{% extends 'default_frame.twig' %}

{% set menus = ['store', 'plugin', 'plugin_list'] %}

{% block title %}EkkyoKun画面{% endblock %}
{% block sub_title %}{% endblock %}

{% form_theme form 'Form/bootstrap_3_horizontal_layout.html.twig' %}

{% block main %}
    <form class="form-horizontal" method="post" action="{{ url('plugin_EkkyoKun_config') }}">
        {{ form_widget(form._token) }}
        <div class="row" id="aside_wrap">
            <div  class="col-md-9">
                {% if token is null %}
                    <div class="alert alert-warning" role="alert">
                        <p>本サービスのご利用には申込みが必要です。
                            <a href="{{ signup_url }}" class="btn btn-default btn-sm" target="_blank">お申し込みはこちら</a></p>
                    </div>
                {% endif %}
                <div class="alert alert-warning" role="alert">
                    <p>本サービスに関してのお問い合わせはこちらからお願いします。
                        <a href="{{ inquiry_url }}" class="btn btn-default btn-sm" target="_blank">お問い合わせはこちら</a></p>
                </div>
                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title">EkkyoKun設定</h3>
                    </div><!-- /.box-header -->
                    <div class="box-body form-horizontal">
                        <div class="form-group {% if form.name_token.vars.errors|length %} has-error {% endif %}">
                            <label class="col-sm-3 control-label">トークン<span class="text-danger">*</span></label>
                            <div class="col-sm-9">
                                {{ form_widget(form.name_token) }}
                                {{ form_errors(form.name_token) }}
                            </div>
                        </div>
                        <div class="form-group {% if form.name_countries.vars.errors|length %} has-error {% endif %}">
                            <label class="col-sm-3 control-label">除外国<span class="text-danger">*</span></label>
                            <div class="col-sm-9">
                                {{ form_widget(form.name_countries) }}
                                {{ form_errors(form.name_countries) }}
                            </div>
                        </div>
                    </div><!-- /.box-body -->
                </div><!-- /.box -->
            </div><!-- /.col -->
            <div class="col-md-3" id="aside_column">
                <div id="common_box" class="col_inner">
                    <div id="common_button_box" class="box no-header">
                        <div id="common_button_box__body" class="box-body">
                            <div id="common_button_box__edit_button" class="row text-center">
                                <div class="col-sm-6 col-sm-offset-3 col-md-12 col-md-offset-0">
                                    <button class="btn btn-primary btn-block btn-lg" type="submit">設定</button>
                                </div>
                            </div>
                        </div><!-- /.box-body -->
                    </div><!-- /.box -->
                </div>
            </div><!-- /.col -->
        </div>
    </form>
{% endblock main %}
